<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Whether ForeCat</title>
    <link rel="stylesheet" href="Styles/style.css">
</head>
<body>
    <div class="container">
        <div class="current-info">
            <div class="date-container">
                <div class="time" id="time">
                    <%=dateMinAmPm%>
                </div>
                <div class="date" id="date">
                    <%= dayDate%>
                </div>
                <div class="other" id="current-weather-items">
                    <div class="weather-item">
                        <div>Humidity</div>
                        <% if (locals.humidity) { %>
                        <div><%=humidity%></div>
                        <% } else { %>
                    
                        <% } %>
                    </div>
                    <div class="weather-item">
                        <div>Temperature</div>
                        <% if (locals.temp) { %>
                        <div><%=temp%></div>
                        <% } else { %>
    
                        <% } %>
                    </div>
                    <div class="weather-item">
                        <div>Wind Speed</div>
                        <% if (locals.windSpeed) { %>
                        <div><%=windSpeed%></div>
                        <% } else { %>
                        
                        <% } %>
                    </div>
                </div>
            </div>
            <div class="form-element">
                <div class="description">
                    <% if (locals.description) { %>
                        <div><%=description%></div>
                        <% } else { %>
                            <div>Welcome ‚òÅ</div>
                        <% } %>
                </div>
            <div class="form-element-child">
            <form id="myForm" method="post">
                <div class="form-fields">
                    <div class="label">
                        <label for="idInput">lat:</label>
                    </div>
                    <div class="value">
                        <input type="text" id="idInput" name="lati" autocomplete="off">
                    </div>
                </div>
                <div class="form-fields">
                    <div class="label">
                        <label for="secretInput">lon:</label>
                    </div>
                    <div class="value">
                        <input type="text" id="secretInput" name="longi" autocomplete="off">
                    </div>
                </div>
                
                <div class="form-fields">
                    <input id="get" type="submit" value="Submit" formaction="/get-whether">
                </div>
              
              </form>
            </div>
            </div>
            <div class="place-container">
               <div>
                    <div class="time-zone" id="time-zone">
                        <% if (locals.placeName) { %>
                        <div><%=placeName%></div>
                        <% } else { %>
                        <div>Asia/Kolkatta</div>
                        <% } %>
                    </div>
                    <div id="country" class="country">
                        IN
                    </div>
                    <div class="placeSearch">
                        <form id="myForm" method="post">
                            <div class="form-fields">
                                <div class="label">
                                <label for="idInput" >Place Name</label>
                            </div>
                            <div class="value">
                                <input type="text" id="idInput" name="placeName" autocomplete="off">
                            </div>
                            <div class="submit">
                                <input id="get" type="submit" value="Submit" 
                                formaction="/get-whether-place">
                            </div>   
                        </form>
                    </div> 
                </div>
            </div>
        </div>
    </div>
